rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles: Readable by all authenticated users (for leaderboards/rankings),
    // but only writable by the owner.
    match /users/{userId} {
      allow get, list: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Unique display name enforcement: Managed via transactions.
    match /displayNames/{name} {
      allow get, list: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete, update: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Match history: Used for time-scoped leaderboards.
    match /matchHistory/{matchId} {
      allow get, list: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Live sessions: Metadata.
    match /live_sessions/{sessionId} {
      allow get, list: if request.auth != null;
    }
    
    // Live session participants: 
    // We allow reading the list of participants via the collection path.
    match /live_sessions/{sessionId}/participants {
      allow get, list: if request.auth != null;
    }
    
    // Individual participant records.
    match /live_sessions/{sessionId}/participants/{userId} {
      allow get, list: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}