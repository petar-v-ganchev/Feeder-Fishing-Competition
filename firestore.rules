rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles are readable by any authenticated user for leaderboards.
    // Users can only write to their own profile.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Unique display name enforcement.
    match /displayNames/{name} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Match history records for competitive stats.
    match /matchHistory/{matchId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Live competition session management.
    // Explicitly allow reading session metadata and participant collections.
    match /live_sessions/{sessionId} {
      allow read: if request.auth != null;
      
      match /participants/{userId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Allow listing of participants sub-collection
      match /participants {
        allow read: if request.auth != null;
      }
    }
  }
}