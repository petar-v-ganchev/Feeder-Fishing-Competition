rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles: Readable by all authenticated users (for leaderboards), but only writable by the owner.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Unique display name enforcement.
    match /displayNames/{name} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete, update: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Match history: Used for time-scoped leaderboards.
    match /matchHistory/{matchId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Live sessions and participants.
    match /live_sessions/{sessionId} {
      allow read: if request.auth != null;
      
      // Matches the participants collection and its documents.
      match /participants/{participantId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == participantId;
      }
    }
  }
}